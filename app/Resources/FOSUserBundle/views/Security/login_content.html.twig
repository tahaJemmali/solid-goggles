{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label style="color: #1b1e21;" for="username">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="checkout_input" />

    <label style="color: #1b1e21;" for="password">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="checkout_input" />

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label style="color: #1b1e21;" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    <br>

    <input class="login_button trans_200"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    <h6>{{ 'registration.submit'|trans }} <a href="{{ path("fos_user_registration_register") }}" style="color:#ffbe27">velo.tn </a></h6>
    <h6><a href="{{ path("fos_user_resetting_request") }}" style="color:#ffbe27">Mot de passe oubli√© ? </a></h6>
</form>
