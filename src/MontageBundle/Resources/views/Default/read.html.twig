{% extends "back/index.html.twig" %}
{% block titre %} Velo Personalisé{% endblock %}


{% block body %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css%22%3E">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css%22%3E">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css%22%3E">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css%22%3E">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css%22%3E">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css%22%3E">
    <link rel="stylesheet" href="{{ asset("back/assets/css/cs-skin-elastic.css") }}">

    <link href="https://cdn.jsdelivr.net/npm/chartist@0.11.0/dist/chartist.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/jqvmap@1.5.1/dist/jqvmap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/weathericons@2.1.0/css/weather-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.9.0/dist/fullcalendar.min.css" rel="stylesheet" />


    <a style="color: #718C00" href="{{ path('addPiece') }}">Ajouter une piéce de rechange </a>



    <div class="card"  style="margin-bottom: 10%;margin-top: 10%;margin-right: 10%;margin-left: 10%;">
        <h4 class="card-header">Liste des piéces de rechanges</h4>
        <div class="table-stats order-table ov-h">




                <table class="table" align="center">
                    <thead>


                    <th>id</th>
                    <th>CATEGORIE</th>
                    <th>NOM</th>
                    <th>DESCRIPTION</th>
                    <th>PHOTO</th>
                    <th>MODIFIER</th>
                    <th>SUPPRIMER</th>

                    </thead>
                    <tbody>

                    {% for piece in pieces %}

                        <tr>
                            <td scope="col" class="text-center" style="width: 9%;vertical-align: middle;">{{ piece.id }}</td>
                            <td scope="col" class="text-center" style="width: 9%;vertical-align: middle;" >{{ piece.categorie }}</td>
                            <td scope="col" class="text-center" style="width: 9%;vertical-align: middle;">{{ piece.nom }}</td>
                            <td scope="col" class="text-center" style="width: 9%;vertical-align: middle;">{{ piece.description }}</td>
                            <td > <div align="center">
                                    <img style="width: 20%;" src="{{ asset(piece.photo) }}" /> {{ piece.nom }}
                                </div>
                            </td>
                            <td scope="col" class="text-center" style="width: 9%;vertical-align: middle;"> <a href="{{ path( 'editPiece', {'id':piece.id} ) }}">Modifier </a></td>
                            <td scope="col" class="text-center" style="width: 9%;vertical-align: middle;"> <a href="{{ path( 'removePiece', {'id':piece.id} ) }}">Supprimer </a></td>




                        </tr>
                    {% endfor %}

                    </tbody>
                </table>



            </div>
        </div>
    </div>


{% endblock %}